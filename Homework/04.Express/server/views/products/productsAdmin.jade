extends ../shared/admin-layout
block main-content
   .row.text-center
      each product in products
         .col-md-3.col-sm-6.hero-feature
            .thumbnail
               img(src='#{product.imageUrl}', alt='')
               .caption
                  h3.cutText #{product.name}
                  p.ellipsis #{product.description}
                  p
                     a.btn.btn-primary(href='/admin/products/remove/#{product.id}') Remove
                     a.btn.btn-primary(href='/admin/products/edit/#{product.id}') Edit