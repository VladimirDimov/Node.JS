extends ../shared/layout
block main-content
    .container
        .col-xs-12.col-sm-8.col-md-8.col-sm-offset-2.col-md-offset-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Please Sign In
                .panel-body
                    form(role='form', method='POST', name='loginForm', action='/account/login')
                        .form-group
                            input#user_name.form-control.input-sm.floatlabel(type='text', name='username', ng-model='vm.user.userName',required='', ng-minlength='6', placeholder='User Name')
                            span.label.error(ng-show='loginForm.username.$error.required')
                                | *This is a required field
                        .form-group
                            input#password.form-control.input-sm(type='password', name='password', ng-model='vm.user.Password', required='', ng-minlength='6', placeholder='Password')
                            span.label.error(ng-show='loginForm.password.$error.required')
                                | *This is a required field
                        input.btn.btn-success.btn-block(type='submit', value='Login')